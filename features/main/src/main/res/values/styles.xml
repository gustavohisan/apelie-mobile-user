<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="store_name" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="store_category" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="store_address" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="store_rating" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#FFBF00</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="home_section_title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
